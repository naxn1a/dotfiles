# Initialize completion
autoload -U compinit; compinit

# Shell
alias -- eza='eza --icons auto --git'
alias -- la='eza -a'
alias -- l='eza -l'
alias -- ll='eza -la'
alias -- lla='eza -la'
alias -- ls=eza
alias -- lt='eza --tree'
alias cat="bat";
alias find="fd";
alias grep="rg";

# Git
alias gs="git status"

# Neovim
alias nv="nvim"

# Tmux
alias tm="tmux"

# Docker
alias dk="docker ps"
alias dkcu="docker compose up -d"
alias dkcd="docker compose down -v"
alias dkcl="docker compose logs -f"
alias dkrmi="docker image prune -af"
alias dkrmv="docker volume prune -af"
alias dkrmb="docker builder prune -af"

# Podman
alias pd="podman"

# Podman Compose
alias pdc="podman-compose"
alias pdcu="podman-compose up -d"
alias pdcd="podman-compose down -v"
alias pdcl="podman-compose logs -f"
alias pdrmi="podman image prune -af"
alias pdrmv="podman volume prune -af"
alias pdrmb="podman builder prune -af"

# Lazy
alias lzg="lazygit"
alias lzd="lazydocker"

# Chezmoi
alias cz="chezmoi"

# Oh My Zsh
# export ZSH="$HOME/.oh-my-zsh"
# ZSH_THEME="robbyrussell"
# plugins=(git)
# source $ZSH/oh-my-zsh.sh

# Homebrew
export PATH="/opt/homebrew/bin:$PATH"

# Bun Completions
[ -s "/Users/naxn1a/.bun/_bun" ] && source "/Users/naxn1a/.bun/_bun"

# Bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# Mise
eval "$(mise activate zsh)"

# Starship
export STARSHIP_CONFIG="$HOME/.config/starship/starship.toml"
eval "$(starship init zsh)"

# Direnv integration
eval "$(direnv hook zsh)"

# Factory.ai
export PATH=/Users/naxn1a/.local/bin:$PATH

