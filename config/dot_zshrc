# Direnv integration
eval "$(direnv hook zsh)"

# Homebrew
export PATH="/opt/homebrew/bin:$PATH"

# Starship
export STARSHIP_CONFIG="$HOME/.config/starship/starship.toml"
eval "$(starship init zsh)"

# Mise
eval "$(mise activate zsh)"

# Bun
[ -s "/Users/naxn1a/.bun/_bun" ] && source "/Users/naxn1a/.bun/_bun"
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# Factory.ai
export PATH=/Users/naxn1a/.local/bin:$PATH

# Shell
alias -- eza='eza --icons auto --git'
alias -- la='eza -a'
alias -- l='eza -l'
alias -- ll='eza -la'
alias -- lla='eza -la'
alias -- ls=eza
alias -- lt='eza --tree'
alias cat="bat";
alias find="fd";
alias grep="rg";

# Git
alias gs="git status"

# Neovim
alias nv="nvim"

# Tmux
alias tm="tmux"

# Lazy
alias lzg="lazygit"
alias lzd="lazydocker"

# Chezmoi
alias cz="chezmoi"

